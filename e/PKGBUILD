# Maintainer: FÃ©lix Saparelli <aur@passcod.name>
pkgname=e
pkgver=1.0
pkgrel=2
pkgdesc="Alias for \$EDITOR"
arch=('i686' 'x86_64')
url="https://github.com/passcod/pkgs"
license=('Public Domains')
optdepends=('vim')
source=('git://github.com/passcod/pkgs.git')
md5sums=('SKIP')
package() {
  cd "$srcdir/pkgs/$pkgname"
  mkdir -p "$pkgdir/usr/local/bin"
  cp e "$pkgdir/usr/local/bin/e"
  chmod +x "$pkgdir/usr/local/bin/e"
}
