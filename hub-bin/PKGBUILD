# Maintainer: FÃ©lix Saparelli <aur@passcod.name>
pkgname=hub-bin
pkgver=2.2.0
pkgrel=1
pkgdesc="hub helps you win at git. Go-powered version"
arch=('i686' 'x86_64')
url="https://hub.github.com"
license=('MIT')
_arch=amd64  # Workaround for mkaurball: https://bugs.archlinux.org/task/40711
[[ $CARCH = i686 ]] && _arch=386
source=("https://github.com/github/hub/releases/download/v${pkgver}-preview1/hub_${pkgver}-preview1_linux_${_arch}.gz.tar")
sha512sums=('SKIP')

package() {
  cd $srcdir/hub_${pkgver}-preview1_linux_${_arch}
  install -Dm755 {,$pkgdir/usr/bin/}hub
  install -Dm644 {etc/,$pkgdir/usr/share/git/completion/}hub.bash_completion.sh
  install -Dm644 {etc/,$pkgdir/usr/share/git/completion/}hub.zsh_completion
}
