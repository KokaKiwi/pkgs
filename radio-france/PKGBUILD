pkgname=radio-france
pkgver=1.0
pkgrel=1
pkgdesc="Ouvrir n'importe quelle station de Radio France depuis la CLI"
arch=('any')
url="https://github.com/passcod/pkgs"
license=('Public Domain')
depends=('mimeo' 'ruby' 'ruby-fuzzy-match' 'ruby-i18n')
source=('radio-france')
sha512sums=('ae2ba4a3899daae01608b22bf1aa03b20b4d2e5edccd2f118177627ddbddef4f8f3979f5933e69f5490e2de9071f574e83c6c6c890eedc70c894f130ba6df88a')
package() {
  cd $srcdir/pkgs/$pkgname
  bin="$pkgdir/usr/bin"
  mkdir -p $bin
  cp $pkgname $bin/$pkgname
  chmod +x $bin/$pkgname
}
